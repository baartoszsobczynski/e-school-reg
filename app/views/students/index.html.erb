<% provide(:title, "Students list") %>
<div class="container">
  <h1><%= "Students list (#{@students.count})" %></h1>
  <%= link_to "Add new student", new_student_path, class: "btn btn-success" %>
  <table class="table">
    <tr>
      <th>Student</th>
      <th colspan="3">Class</th>
    </tr>
    <% @students.each do |student| %>
        <tr>
          <td><%= link_to "#{student.first_name} #{student.last_name}", student_path(student.id) %></td>
          <td><%= link_to_school_class_if_available(student.id) %></td>
          <td><%= link_to "Edit", edit_student_path(student.id), class: "btn btn-primary" %></td>
          <td><%= link_to "Delete", student_path(student), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %></td>
        </tr>
    <% end %>
  </table>
</div>


