<div class="input-group">

  <%= render "shared/errors_panel", collection: @student %>

  <%= form_for @student do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: 'First name', class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: 'Last name', class: "form-control" %><br>
      </div>

      <%= f.submit "Create", class: "btn btn-success" %>
  <% end %>
</div>